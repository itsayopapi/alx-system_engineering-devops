#!/usr/bin/env bash

# Install Nginx
apt-get update
apt-get install -y nginx

# Create web page files
mkdir -p /var/www/html
chmod -R 755 /var/www/html
echo 'Hello World!' > /var/www/html/index.html
echo "Ceci n'est pas une page" > /var/www/html/404.html

# Configure Nginx
cat <<EOF > /etc/nginx/sites-available/custom-header
server {
    listen 80;
    server_name _;

    add_header X-Served-By \$hostname;

    location = /404.html {
        root /var/www/html;
        internal;
    }

    location /redirect_me {
        rewrite ^ https://www.blog.ehoneahobed.com permanent;
    }
}
EOF
ln -s /etc/nginx/sites-available/custom-header /etc/nginx/sites-enabled/custom-header

# Allow requests through port 80
ufw allow 'Nginx HTTP'

# Restart Nginx
systemctl restart nginx
